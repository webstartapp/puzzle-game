{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "build",
    "incremental": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "declaration": true,

    "declarationDir": "build",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/generator/*": ["../generator/*"]
    },
    "baseUrl": "./",
    "target": "ESNext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "allowJs": true,
    "strict": true,
    "removeComments": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src", "generator", "declaration.d.ts", "index.ts", "../generator/utils"],
  "exclude": ["node_modules", "build", "node_modules/**/*", "sass"]
}
